@if (DayConfig.Activity == Common.Activity.Run && Week.Distances.ContainsKey(DayConfig.DistanceType))
{
    <input value="@Week.Distances[DayConfig.DistanceType]" class="form-control" />    
}


@code {
    [Parameter]
    public DayConfig DayConfig { get; set; }

    [Parameter]
    public Week Week { get; set; }
}
